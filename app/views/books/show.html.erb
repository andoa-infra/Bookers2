
<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

  <%= render 'books/list', book: @book %>


<div class="col-lg-8">
	<h1>Book detail</h1>
	<table class="table">
		<tbody>
			<tr>
				<td><span><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:'jpeg', class:"img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %></span></td>
				<td><p><%=@book.title%></p></td>
				<td><%= @book.body %></td>
				
			</tr>
		</tbody>
	</table>

</div>

