
<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<h1>User info</h1>
				<div class="profile-container">
					<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format:'jpeg', class:"img-circle pull-left profile-img", fallback: "no_image.jpg" %>
	        	</div>
	        	<table class="table">
                        <tbody>
                            <tr>
                                <th>name</th>
                                <th><%= current_user.name %></th>
                            </tr>
                            <tr>
                                <th>introduction </th>
                                <th><%= current_user.introduction %></th>
                            </tr>
                        </tbody>
                    </table>

	        	<p><%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>

	        <h1>New book</h1>
<!-- form_for部分 -->
			<%= form_for(@book, url: '/books') do |f| %>

				<h4>Title</h4>
    			<%= f.text_field :title, class:"title field" %>

    			<h4>Body</h4>
    			<%= f.text_area :body, class:"body field" %>

    			<%= f.submit 'Create Book', class: "btn btn-primary" %>

			<% end %>

		</div>

		<div class="col-lg-8">
			<h1>Books</h1>

				 <table class= "table table-striped">
    				<tr>
    					<th colspan="" rowspan="" headers="" scope=""></th>
    					<th colspan="" rowspan="" headers="" scope="">Title</th>
    					<th colspan="" rowspan="" headers="" scope="">Body</th>
    				</tr>

    				<% @books.each do |book| %>

    				<tr>
    					<td colspan="" rowspan="" headers="" scope=""><span><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, format:'jpeg', class:"img-circle pull-left profile-img", fallback: "no_image.jpg" %></span></td>
        				<td colspan="" rowspan="" headers="" scope=""><span><%=link_to book.title, book_path(book.id) %></span></td>
        				<td colspan="" rowspan="" headers="" scope=""><span><%= book.body %></span></td>
    				</tr>

 					<% end %>

 				</table>
		</div>
	</div>
</div>