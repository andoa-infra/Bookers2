
<div class= "col-md-6 col-md-offset-3">
	<h1>編集画面</h1>
<!-- form_for部分 -->
		<%= form_for(@book) do |f| %>
    		<h4>Title</h4>
    			<%= f.text_field :title, class:"col-xs-12" %>
    		<h4>Body</h4>
    			<%= f.text_area :body, class:"col-xs-12" %>
    		<%= f.submit '保存', class:"btn btn-primary col-xs-12" %>
		<% end %>
</div>