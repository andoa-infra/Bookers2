<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h1>User info</h1>
                <div class="profile-container">
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format:'jpeg', class:"img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                </div>
                <table class="table">
                        <tbody>
                            <tr>
                                <th>name</th>
                                <th><%= user.name %></th>
                            </tr>
                            <tr>
                                <th>introduction </th>
                                <th><%= user.introduction %></th>
                            </tr>
                        </tbody>
                    </table>

                <p><%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>

            <h1>New book</h1>
<!-- form_for部分 -->
            <%= form_for(book, url: '/books') do |f| %>

                <% if @book.errors.any? %>
                    <div id="error_explanation">
                    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this message from being saved:</h2>

                    <ul>
                        <% @book.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                        <% end %>
                    </ul>
                    </div>
                <% end %>

                <h4>Title</h4>
                <%= f.text_field :title, rows:'',class:"title field" %>

                <h4>Body</h4>
                <%= f.text_area :body, class:"body field" %>

                <%= f.submit 'Create Book', class: "btn btn-primary" %>

            <% end %>

        </div>