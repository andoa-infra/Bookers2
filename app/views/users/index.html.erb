<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <h1>User info</h1>
                <div class="profile-container">
                    <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format:'jpeg', class:"img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                    <h3 class="profile-name">name <%= current_user.name %></h3>
                    <h3 class="introduction">introduction <%= current_user.introduction %></h3>

                </div>

                <p><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p>

            <h1>New book</h1>
<!-- form_for部分 -->
            <%= form_for(@book, url: '/books') do |f| %>

                <h4>Title</h4>
                <%= f.text_field :title %>

                <h4>Body</h4>
                <%= f.text_area :body %>

                <%= f.submit 'Create Book' %>

            <% end %>

        </div>

        <div class="col-lg-8">
            <h1>Books</h1>

                 <table>
                    <tr>
                        <th colspan="" rowspan="" headers="" scope=""></th>
                        <th colspan="" rowspan="" headers="" scope="">Image</th>
                        <th colspan="" rowspan="" headers="" scope="">Name</th>
                    </tr>

                    <% @users.each do |user| %>

                    <tr>
                        <td colspan="" rowspan="" headers="" scope=""><span><%= %></span></td>
                        <td colspan="" rowspan="" headers="" scope=""><span><%=link_to user.name, user_path(user.id) %></span></td>
                        <td colspan="" rowspan="" headers="" scope=""><span><%= user.name %></span></td>
                    </tr>

                    <% end %>

                </table>
        </div>
    </div>
</div>